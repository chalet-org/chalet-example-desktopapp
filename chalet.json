{
	"name": "chalet-example-desktopapp",
	"version": "1.0.0",
	"abstracts:*": {
		"language": "C++",
		"settings:Cxx": {
			"cppStandard": "c++17",
			"warnings": "pedantic"
		}
	},
	"targets": {
		"chalet-example-desktopapp": {
			"kind": "executable",
			"settings:Cxx": {
				"precompiledHeader": "src/pch.hpp",
				"defines": [
					"_UNICODE",
					"UNICODE",
					"WIN32",
					"_WINDOWS"
				],
				"includeDirs": [
					"src"
				],
				"links": [
					"gdi32"
				],
				"windowsSubSystem.!debug": "windows"
			},
			"files": "src/**.cpp"
		}
	},
	"distribution": {
		"chalet-example-desktopapp": {
			"kind": "bundle",
			"subdirectory": "Release",
			"configuration": "Release",
			"buildTargets": [
				"chalet-example-desktopapp"
			]
		},
		"chalet-example-desktopapp-d": {
			"kind": "bundle",
			"subdirectory": "Debug",
			"configuration": "Debug",
			"buildTargets": [
				"chalet-example-desktopapp"
			]
		}
	}
}
